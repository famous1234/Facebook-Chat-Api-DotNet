<Window x:Class="FacebookChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FacebookChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblEmail" Content="Email : " HorizontalAlignment="Left" Margin="110,80,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password : " HorizontalAlignment="Left" Margin="89,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxEmail" HorizontalAlignment="Left" Margin="163,84,0,0" TextWrapping="Wrap" Text="zzyun1120@hotmail.com" VerticalAlignment="Top" Width="312"/>
        <PasswordBox x:Name="tbxPassword" HorizontalAlignment="Left" Margin="163,119,0,0" VerticalAlignment="Top" Width="312"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="163,160,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,-0.25" Click="btnLogin_Click"/>
        <Button x:Name="btnStopListening" Content="StopListening" HorizontalAlignment="Left" Margin="310,235,0,0" VerticalAlignment="Top" Width="75" Click="btnStopListening_Click"/>
    </Grid>
</Window>
